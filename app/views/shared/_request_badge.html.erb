<% unless current_user.pending_requests_count.zero? %>
  <span class="badge my-badge">
    <div class="request-notification-badge">
      <%= current_user.pending_requests_count %>
    </div>
  </span>
<% else %>
  <span class="d-none badge my-badge badge-light">
    <div class="request-notification-badge"></div>
  </span>
<% end %>
