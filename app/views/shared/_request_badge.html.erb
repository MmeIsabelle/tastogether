<% unless current_user.pending_requests_count.zero? %>
  <span class="badge my-badge" id="request-notification-badge">
    <div data-user-id="<%= current_user.id %>">
      <%= current_user.pending_requests_count %>
    </div>
  </span>
<% else %>
  <span class="d-none badge my-badge badge-light" id="request-notification-badge">
    <div data-user-id="<%= current_user.id %>"></div>
  </span>
<% end %>
