<% unless current_user.pending_messages_count.zero? %>
  <span class="badge my-badge badge-light">
    <div class="message-notification-badge" id="notification" data-user-id="<%= current_user.id %>">
      <%= current_user.pending_messages_count %>
    </div>
  </span>
<% else %>
  <span class="badge my-badge badge-light d-none">
    <div class="message-notification-badge" id="notification" data-user-id="<%= current_user.id %>"></div>
  </span>
<% end %>
